@import "font-awesome/css/font-awesome.css"
@import "bootstrap/dist/css/bootstrap.css"

//
// Bootstrap Fonts
//

@font-face
    font-family: 'Glyphicons Halflings'
    src: url('../bower_components/bootstrap/fonts/glyphicons-halflings-regular.eot')
    src: url('../bower_components/bootstrap/fonts/glyphicons-halflings-regular.eot?#iefix') format('embedded-opentype'),
    url('../bower_components/bootstrap/fonts/glyphicons-halflings-regular.woff') format('woff'),
    url('../bower_components/bootstrap/fonts/glyphicons-halflings-regular.ttf') format('truetype'),
    url('../bower_components/bootstrap/fonts/glyphicons-halflings-regular.svg#glyphicons_halflingsregular') format('svg');

//
// Custom Fonts
//

@font-face
    font-family: 'Skinny'
    src: url('../assets/fonts/TheSkinny.woff')
    url('../assets/fonts/TheSkinny.woff') format('woff');

@font-face
    font-family: 'Hip'
    src: url('../assets/fonts/HipsterishFontNormal.woff')
    url('../assets/fonts/HipsterishFontNormal.woff') format('woff');

@font-face
    font-family: 'AvenirCondensedHand'
    src: url('../assets/fonts/AvenirCondensedHand.woff')
    url('../assets/fonts/AvenirCondensedHand.woff') format('woff');

//
// Font Awesome Fonts
//

@font-face
  font-family: 'FontAwesome'
  src: url('../bower_components/font-awesome/fonts/fontawesome-webfont.eot?v=4.1.0')
  src: url('../bower_components/font-awesome/fonts/fontawesome-webfont.eot?#iefix&v=4.1.0') format('embedded-opentype'),
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.woff?v=4.1.0') format('woff'),
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.ttf?v=4.1.0') format('truetype'),
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.svg?v=4.1.0#fontawesomeregular') format('svg');
  font-weight: normal
  font-style: normal

//
// App-wide Styles
//
body
    font-family Hip
    color #CDCDCD

.browsehappy
    background #ccc
    color #000
    margin 0.2em 0
    padding 0.2em 0

.jumbotron
    background-color #FFF
    margin 0
    padding 40px
    vertical-align middle

h1
    font-family Skinny
    color #CDCDCD
    margin-bottom 40px
    font-size 63px

.jumbo-alt
    background-color #FFFFFF

.gallery-9000
    padding 0

.navbar
      float none
      text-align center
      border-radius 0
      border none
      margin 0
      height 37px
      min-height 37px
      background-color #FCCEBE
      .navbar-nav
            display inline-block
            float none
            font-family Skinny
            font-size 2em
            color #FFF
            li
                a
                    color #FFF
                    padding-top 7px
                    &:hover
                        color #CDCDCD
                &:hover
                    color #CDCDCD

p
    color #989898
    font-family Hip

.navbar
    .navbar-collapse
        text-align center
// injector
@import 'main/main.styl';
@import 'modal/modal.styl';
// endinjector
